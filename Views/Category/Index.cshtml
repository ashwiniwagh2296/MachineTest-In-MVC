@model IEnumerable<WebOnlineShop.Models.CategoryModel>

@{
    Layout = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "AddCategory")
    </p>
    <table class="table" border="1">
        <tr>
            <th>
               srno
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>Action</th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SerialNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Edit", "UpdateCategory", new {  id=item.CategoryId }) |
                @Html.ActionLink("Delete", "DeleteCategory", new {  id=item.CategoryId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
